import matplotlib.pyplot as plt
import math
import numpy as np

def testfn1(x):
    return (math.cos(x))

def createarrays0to2pi(x):
    xvalues = np.linspace(0, 2 * math.pi, x)
    numpoints = len(xvalues)
    yvalues = np.zeros(numpoints)
    return xvalues, yvalues, numpoints
    
def createplot(arrayx, arrayy, z):
    for i in range(z):
        arrayy[i] = testfn1(arrayx[i])
    plt.plot(arrayx, arrayy, 'ro')
    plt.show()
    
def main(x):
    xaxis, yaxis, numpoints = createarrays0to2pi(x)
    createplot(xaxis, yaxis, numpoints)
    
main(50)
    
    

    
    